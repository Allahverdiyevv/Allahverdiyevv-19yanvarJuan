@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<h1>Slider:</h1>
<a asp-action="Create" asp-controller="Slider" class="btn btn-info">Creat</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {

            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Title1</td>
                <td>@item.Title2</td>
                <td>
                    <img style="width:100px" src="~/Upload/Slider/@item.Image"/>
                </td>
                
                <td>
                    <button type="button" asp-action="update" asp-controller="Slider" class="btn btn-success">Update</button>
                    <button type="button" asp-action="delete" asp-controller="Slider" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }


</table>

